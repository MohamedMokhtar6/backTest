

@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    @if (TempData["SuccessData"] != null)
    {
        <h3 class="text-center text-success">@TempData["SuccessData"]</h3>
    }
    @if (TempData["EditData"] != null)
    {
        <h3 class="text-center text-success">@TempData["EditData"]</h3>
    }
    @if (TempData["DeleteData"] != null)
    {
        <h3 class="text-center text-success">@TempData["DeleteData"]</h3>
    }
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Category
            </a>
        </div>
    </div>
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr>
                <th scope="col">
                    Category Name
                </th>
              

                <th scope="col">

                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td width="40%">
                        @item.Name
                    </td>
                    

                    <td width="20%">
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td width="20%">
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-archive-fill"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>

</div>

