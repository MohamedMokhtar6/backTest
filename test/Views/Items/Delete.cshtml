@model Item
@{
    ViewData["Title"] = "Delete";
}


<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Item</h2>
            <hr />
        </div>
         <input asp-for="id" hidden class="form-control" />
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="price"></label>
            <input asp-for="price" disabled class="form-control" />

        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select disabled asp-for="CategoryId" class="form-control mb-4" asp-items="@ViewBag.CategoryList">
            </select>
        </div>
        <div>
            <input type="file" disabled asp-for="clientFile" onchange="loadFile(event)" />
            <img id="myImg" height="200" src="~/Images/@Model.ImagePathe" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Items" class="btn btn-secondary" style="width:150px">
            back to items
        </a>
    </div>
</form>
@section Scripts{
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}