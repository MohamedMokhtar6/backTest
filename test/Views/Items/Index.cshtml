@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    @if (TempData["SuccessData"] != null)
    {
        <h3 class="text-center text-success">@TempData["SuccessData"]</h3>
    }
    @if (TempData["EditData"] != null)
    {
        <h3 class="text-center text-success">@TempData["EditData"]</h3>
    }
    @if (TempData["DeleteData"] != null)
    {
        <h3 class="text-center text-success">@TempData["DeleteData"]</h3>
    }
    <div class="row pt-4">
        <div class="col-6">
            <h1>Index</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>
    <table class="table table-hover" style="width:100%">
        <thead>
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                    Item Date
                </th>
                <th scope="col">
                    Category
                </th>
                <th scope="col">
                    Image
                </th>
                <th scope="col">

                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td  width="30%">
                        @item.name
                    </td>
                    <td width="10%">
                        @item.price
                    </td>
                    <td width="20%">
                        @item.createdDate
                    </td>
                    <td width="20%">
                        @item.Category.Name
                    </td>
                    <td width="20%">

                        <img src="~/Images/@item.ImagePathe" class="img-thumbnail" width="70" height="50" >
                    </td>
                    <td>
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.id" class="btn btn-danger btn-sm">
                            <i class="bi bi-archive-fill"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>

</div>

